@page
@model Mediflow.Pages.Chemist.PaytmModel
@{
    Layout = "~/Pages/Shared/Chemist/_ChemistHome.cshtml";
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor


@{
    
    String temp = HttpContextAccessor.HttpContext.Session.GetString("PaytmString");
    if (temp != null)
    {
        @Html.Raw(temp);
    }

    else
    {
        <form method="post" asp-page="Paytm" asp-page-handler="Transaction" target="_blank">
            <input type="submit" class="btn btn-primary" name="btnPay" value="Pay" />
        </form>
    }
}
