</head>

<body>
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                   
                    <img src="~/Chemist/assets/img/p1.gif" />
                </div>
            </div>
        </div>
    </div>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex justify-content-between align-items-center">

            <div id="logo">
                @*<h1><a href="/Home/Index">Mediflow</a></h1>*@
               <a href="~/Chemist/HomePage"> <img src="~/Chemist/assets/img/med_3.png" alt="Mediflow" class="d-none d-md-inline-block" width="200px" height="auto" />
                </a>
            </div>

            <nav id="navbar" class="navbar">
                <ul>



                    <li><a class="nav-link scrollto" href="/Home/Index">Home</a></li>
                    <li><a class="nav-link scrollto" href="#about">About</a></li>
                    <li class="dropdown">
                        <a class="nav-link scrollto" href="#features"><span>Features</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="#more-features">More Features</a></li>
                            <li><a href="#advanced-features">Advance Features</a></li>
                        </ul>
                    </li>
                    <li><a class="nav-link scrollto" href="#faq">FAQs</a></li>
                    <li><a class="nav-link scrollto" href="#team">Divisions</a></li>
                    <li><a class="nav-link scrollto" href="#contact">Contact</a></li>

                    <li><a class="nav-link scrollto" href="#loginhere">Login</a></li>
                    <li class="dropdown">
                        <a href="#"><span>Profile</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="/Home/LoginChemist">Login</a></li>
                       
                            <li><a href="/Home/UpdateProfileRegister">Update Profile</a></li>


                            @*{string status = this.HttpContext.Session.GetString("status"); }*@

                            @if (Convert.ToString(ViewData["status"]) != null)
                            {
                                <li><a href="#">Status : <b> @ViewData["status"] </b></a></li>
                            }
                            else
                            {
                                <li><a href="#">Status : <b> New User !</b></a></li>
                            }

                            @if (Convert.ToString(ViewData["username"]) != null)
                            {
                                <li><a href="#">User : <b>@ViewData["Firstname"]</b></a></li>
                            }
                            <li class="dropdown">
                                <a href="#"><span>Login</span> <i class="bi bi-chevron-right"></i></a>
                                <ul>
                                    <li><a href="#">Deep Drop Down 1</a></li>
                                    <li><a href="#">Deep Drop Down 2</a></li>
                                    <li><a href="#">Deep Drop Down 3</a></li>
                                    <li><a href="#">Deep Drop Down 4</a></li>
                                    <li><a href="#">Deep Drop Down 5</a></li>
                                </ul>
                            </li>

                         
                        </ul>
                    </li>
                    @if (Convert.ToString(ViewData["username"]) != null) { 
                        <li><a class="nav-link scrollto" asp-page="/Home/LoginChemist" asp-route-ss="Logout">Logout</a></li>
                    }
                </ul>
               
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->

    <div>
        @RenderBody()
    </div>



    <!--Footer-->
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 text-lg-start text-center">
                    <div class="copyright">
                        &copy; Copyright <strong>Mediflow</strong>. All Rights Reserved
                    </div>
                    <!--<div class="credits">-->
                        <!--
                          All the links in the footer should remain intact.
                          You can delete the links only if you purchased the pro version.
                          Licensing information: https://bootstrapmade.com/license/
