<!DOCTYPE html>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    @*<title>Mediflow</title>*@
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/Chemist/assets/img/logo/favicon.png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700|Open+Sans:300,300i,400,400i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="/Chemist/LandingPage/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="/Chemist/LandingPage/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Chemist/LandingPage/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/Chemist/LandingPage/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="/Chemist/LandingPage/assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
