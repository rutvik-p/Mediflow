@page
@model Mediflow.Pages.TempEditProductModel
@{
    Layout = "~/Pages/Shared/Admin/_AdminHome.cshtml";
}

<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
    <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        
        
        <form action="#" class="tm-edit-product-form">
            <div class="row tm-edit-product-row">

                <div class="col-12">
                    <div class="card sidebar-menu">
                        <div class="card-header" style="background-color :#4fbfb0; width:396px;">
                            <h3 class="h4 card-title">Edit Product</h3>
                        </div>

                        <div class="card-body">

                            <div class="row">
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="name">
                                        Product Name
                                    </label>
                                    <input id="name"
                                           name="name"
                                           type="text"
                                           class="form-control validate"
                                           required placeholder="Medicine Name" />
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="expire_date">
                                        Manufacturer
                                    </label>
                                    <select class="custom-select tm-select-accounts"
                                            id="category">
                                        <option selected>Select Manufacturer</option>
                                        <option value="1">Credit</option>
                                        <option value="2">Cash</option>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="description">MRP</label>
                                <input type="text" class="form-control validate" rows="3" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="category">Volume</label>
                                <input type="text" class="form-control validate" rows="3" required>
                                <br />


                            </div>
                            <div class="row">

                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="stock">
                                        Category
                                    </label>
                                    <select class="custom-select tm-select-accounts"
                                            id="category">
                                        <option selected>Select Status</option>
                                        <option value="1">Approve</option>
                                        <option value="2">Disapprove</option>

                                    </select>
                                </div>
                                <div class="form-group mb-3 col-xs-12 col-sm-6">
                                    <label for="stock">
                                        HSN CODE
                                    </label>
                                    <select class="custom-select tm-select-accounts"
                                            id="category">
                                        <option selected>Hsn Code</option>
                                        <option value="1">Approve</option>
                                        <option value="2">Disapprove</option>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="stock">
                                    Image Upload
                                </label>
                                <input type="file" class="form-control">
                            </div>
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">Update Product</button>





                            </div>

                    </div>

                </div>

            </div>
        </form>
    </div>
</div>